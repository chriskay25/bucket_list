<div class="w3-container">  
  <h1 class="w3-container">Log In</h1>

  <form class="w3-container w3-sand w3-card-2" action="/login" method="post">
    <label for="username">Username: </label>
    <input class="w3-input w3-border" style="width:40%" type="text" name="username" id="username" placeholder="username"><br>
    <label for="password">Password: </label>
    <input class="w3-input w3-border" style="width:40%" type="password" name="password" id="password" placeholder="password"><br>
      <% if @failed %>
        <p class="w3-panel w3-text-red">Your username and/or password were incorrect. Please try again.</p>
      <% end %>
    <input type="submit" class="w3-btn w3-black" value="Log In">
  </form>

  <p class="w3-panel">Don't have an account? <a href="/signup" class="w3-btn w3-blue">Sign up</a> here.</p>
</div>